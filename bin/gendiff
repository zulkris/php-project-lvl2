#!/usr/bin/env php
<?php

require_once(__DIR__ . '/../vendor/autoload.php');

$doc = <<<DOC

Generate diff

Usage:
  gendiff (-h|--help)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  --format <fmt>                Report format [default: pretty]

DOC;

$args = Docopt::handle($doc);

if ($args['-h'] == true || $args['--help']) {
    return $doc;
}
